@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>
    Sellers
</h4>
<hr /> <!--Linha-->
<div class="row"> <!--row do bootstrap garante que o div ocupe a linha inteira/largura da tela-->
    <div class="col-md-4">
        <!--Formulário ocupando 1/3 da tela, bootstrap divide a tela em 12 partes-->
        <form asp-action="Create">
            <!--Formulário htm, chama ação Create do método post-->
            <div class=" form-group">
                <label asp-for="Name" class="control-label"></label> <!--Define o lable que irá aparecer ao digitar (label asp-for=Name)-->
                <input asp-for="Name" class=" form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="Email" class="control-label"></label> <!--Define o lable que irá aparecer ao digitar (label asp-for=Name)-->
                <input asp-for="Email" class=" form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="BirthDate" class="control-label"></label> <!--Define o lable que irá aparecer ao digitar (label asp-for=Name)-->
                <input asp-for="BirthDate" class=" form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="BaseSalary" class="control-label"></label> <!--Define o lable que irá aparecer ao digitar (label asp-for=Name)-->
                <input asp-for="BaseSalary" class=" form-control" />
            </div>
            <div class=" form-group">             
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>        
    </div>
</div>
